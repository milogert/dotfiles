#!/bin/sh

if ! type "nix" &> /dev/null; then
  if [[ $(uname -s) == 'Darwin' ]]; then
    # Special installer until nix-darwin gets updated
    # This is junky, but it should call bash, since -c just redirects to another
    # shell.
    sh -c "sh <(curl https://abathur-nix-install-tests.cachix.org/serve/yihf8zbs0jwph2rs9qfh80dnilijxdi2/install) --tarball-url-prefix https://abathur-nix-install-tests.cachix.org/serve"
    #sh <(curl -L https://nixos.org/nix/install) --darwin-use-unencrypted-nix-store-volume
  else
    # Standard nix install for linux or whatever
    curl -L https://nixos.org/nix/install | sh
  fi
fi
